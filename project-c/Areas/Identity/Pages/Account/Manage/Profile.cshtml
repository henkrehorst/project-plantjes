@page
@model ChangeProfielModel
@{
    ViewData["Title"] = "Profiel wijzigen";
    ViewData["ActivePage"] = ManageNavPages.Profile;
}

<partial name="_StatusMessage" for="StatusMessage"/>
<div class="bg-white">
    <div class="h-8 rounded-lg border shadow-lg bg-white sm:mx-0 h-full">
        <div class="h-30 grid grid-cols-1 md:grid-cols-2 p-5">
            <div>
                <form id="change-profile-form" enctype="multipart/form-data" method="post">
                    <h4 class="text-3xl text-bold text-green-500 font-medium">@ViewData["Title"]</h4>
                    <div class="mb-3">
                        <label asp-for="Input.Bio" class="block text-sm font-medium text-gray-700">Profiel beschrijving</label>
                        <textarea rows="3" placeholder="Profiel beschrijving" asp-for="Input.Bio" class="box-border w-full sm:w-9/12 p-4 flex-grow px-2 border rounded border-grey-400"></textarea>
                        <span asp-validation-for="Input.Bio" class="block mb-3 text-sm font-medium text-red-700"></span>
                    </div>
                    <div class="mb-3 sm:w-9/12">
                        <div class="custom-file-container" data-upload-id="avatar" data-image-location="@Model.Input.AvatarLocation" id="avatar_upload_field">
                            <label>Upload een avatar<a href="javascript:void(0)" class="custom-file-container__image-clear" title="Clear Image">&times;</a></label>
                            <label class="custom-file-container__custom-file">
                                <input type="file" class="custom-file-container__custom-file__custom-file-input" asp-for="Input.Avatar" accept="image/jpeg" aria-label="Choose File">
                                <input type="hidden" name="MAX_FILE_SIZE" value="10485760"/>
                                <span class="custom-file-container__custom-file__custom-file-control"></span>
                            </label>
                            <div class="custom-file-container__image-preview"></div>
                        </div>
                        <span asp-validation-for="Input.Avatar" class="block mb-3 text-sm font-medium text-red-700"></span>
                    </div>
                    <div class="mb-3 sm:w-9/12">
                        <span class="block text-sm font-medium text-gray-700">Profiel banner</span>
                        <div class="custom-file-container" data-upload-id="banner" data-image-location="@Model.Input.BannerLocation" id="banner_upload_field">
                            <label>Upload een banner<a href="javascript:void(0)" class="custom-file-container__image-clear" title="Clear Image">&times;</a></label>
                            <label class="custom-file-container__custom-file">
                                <input type="file" class="custom-file-container__custom-file__custom-file-input" asp-for="Input.Banner" accept="image/jpeg" aria-label="Choose File">
                                <input type="hidden" name="MAX_FILE_SIZE" value="10485760"/>
                                <span class="custom-file-container__custom-file__custom-file-control"></span>
                            </label>
                            <div class="custom-file-container__image-preview"></div>
                        </div>
                        <span asp-validation-for="Input.Banner" class="block mb-3 text-sm font-medium text-red-700"></span>
                    </div>
                    <button type="submit" class="w-full sm:w-9/12 bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">Opslaan</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}