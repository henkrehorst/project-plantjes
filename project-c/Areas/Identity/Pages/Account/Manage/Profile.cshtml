@page
@model ChangeProfielModel
@{
    ViewData["Title"] = "Profiel wijzigen";
    ViewData["ActivePage"] = ManageNavPages.Profile;
}

<partial name="_StatusMessage" for="StatusMessage"/>
<div class="bg-white">
    <div class="h-8 rounded-lg border shadow-lg bg-white sm:mx-0 h-full">
        <div class="h-30 grid grid-cols-1 md:grid-cols-2 p-5">
            <div>
                <form id="change-profile-form" enctype="multipart/form-data" method="post">
                    <h4 class="text-3xl text-bold text-green-500 font-medium">@ViewData["Title"]</h4>
                    <div class="mb-3">
                        <label asp-for="Input.Bio" class="block text-sm font-medium text-gray-700">Profiel beschrijving</label>
                        <textarea rows="3" placeholder="Profiel beschrijving" asp-for="Input.Bio" class="box-border w-full sm:w-9/12 p-4 flex-grow px-2 border rounded border-grey-400"></textarea>
                        <span asp-validation-for="Input.Bio" class="block mb-3 text-sm font-medium text-red-700"></span>
                    </div>
                    <div class="mb-3">
                        <span class="block text-sm font-medium text-gray-700">Avatar</span>
                        <label class="w-full sm:w-9/12 flex flex-col items-center px-4 py-6 bg-white text-blue rounded-lg shadow-lg tracking-wide uppercase border border-blue cursor-pointer hover:bg-blue-500 hover:text-white">
                            <svg class="w-8 h-8" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                                <path d="M16.88 9.1A4 4 0 0 1 16 17H5a5 5 0 0 1-1-9.9V7a3 3 0 0 1 4.52-2.59A4.98 4.98 0 0 1 17 8c0 .38-.04.74-.12 1.1zM11 11h3l-4-4-4 4h3v3h2v-3z"/>
                            </svg>
                            <span class="mt-2 text-base leading-normal">Upload een Avatar</span>
                            <span id="file-name"></span>
                            <input type='file' id="avatar_upload" class="hidden" asp-for="Input.Avatar"/>
                            <script>
                                let inputFile = document.getElementById('avatar_upload');
                                let fileNameField = document.getElementById('file-name');
                                inputFile.addEventListener('change', function (event) {
                                    let uploadedFileName = event.target.files[0].name;
                                    fileNameField.textContent = uploadedFileName;
                                 });
                            </script>
                            <label class="text-xs text-gray-500">
                                JPG tot 1MB
                            </label>

                        </label>
                        <span asp-validation-for="Input.Avatar" class="block mb-3 text-sm font-medium text-red-700"></span>
                    </div>
                    <div class="mb-3">
                        <span class="block text-sm font-medium text-gray-700">Profiel banner</span>
                        <label class="w-full sm:w-9/12 flex flex-col items-center px-4 py-6 bg-white text-blue rounded-lg shadow-lg tracking-wide uppercase border border-blue cursor-pointer hover:bg-blue-500 hover:text-white">
                            <svg class="w-8 h-8" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                                <path d="M16.88 9.1A4 4 0 0 1 16 17H5a5 5 0 0 1-1-9.9V7a3 3 0 0 1 4.52-2.59A4.98 4.98 0 0 1 17 8c0 .38-.04.74-.12 1.1zM11 11h3l-4-4-4 4h3v3h2v-3z"/>
                            </svg>
                            <span class="mt-2 text-base leading-normal">Upload een Banner</span>
                            <span id="file-name-banner"></span>
                            <input type='file' id="banner_upload" class="hidden" asp-for="Input.Banner"/>
                            <script>
                                let inputFileBanner = document.getElementById('banner_upload');
                                let fileNameFieldBanner = document.getElementById('file-name-banner');
                                inputFileBanner.addEventListener('change', function (event) {
                                     fileNameFieldBanner.textContent = event.target.files[0].name;
                                });
                            </script>
                            <label class="text-xs text-gray-500">
                                JPG tot 2MB
                            </label>

                        </label>
                        <span asp-validation-for="Input.Banner" class="block mb-3 text-sm font-medium text-red-700"></span>
                    </div>
                    <button type="submit" class="w-full sm:w-9/12 bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">Opslaan</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}