@inject SignInManager<User> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<style>
    ul{
        list-style: none;
        list-style-type: none;
    }
    li{
        float: left;
        padding-left: 10px;
        padding-right: 10px;
        padding-bottom: 20px;
    }
    li a{
        text-align: center;
    }
</style>
<ul style="list-style-type: none;">
      <li class="nav-item"><a class="bg-transparent hover:bg-green-500 text-green-700 font-semibold hover:text-white py-2 px-4 border border-green-500 hover:border-transparent rounded" id="modify" asp-page="./Modify">Accountgegevens</a></li>
      <li class="nav-item"><a class="bg-transparent hover:bg-green-500 text-green-700 font-semibold hover:text-white py-2 px-4 border border-green-500 hover:border-transparent rounded" id="change-password" asp-page="./ChangePassword">Wachtwoord</a></li>
      @if (hasExternalLogins)
      {
        <li id="external-logins" class="nav-item"><a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">External logins</a></li>
      }
      <li class="nav-item"><a class="bg-transparent hover:bg-green-500 text-green-700 font-semibold hover:text-white py-2 px-4 border border-green-500 hover:border-transparent rounded" id="personal-data" asp-page="./PersonalData">Personele gegevens</a></li>
</ul>
