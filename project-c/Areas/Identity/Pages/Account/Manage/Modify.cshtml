@page
@model ModifyModel
@{
    ViewData["Title"] = "Accountgegevens Veranderen";
    ViewData["ActivePage"] = ManageNavPages.Modify;
}

<style>
    h4{
        padding-top: 15px;
    }
    .infoformfields{
        background-color: #0094ff;
    }

    button {
        padding-left: 15px;
        padding-top: 20px;
        padding-right: 15px;
        padding-bottom: 20px;
        text-align: center;
        transition-duration:0.2s;
        background-color: white;
        border: 8px;
        border-color: black;
        border-radius: 4px;
    }

    button:hover {
        background-color: #4CAF50;
        text-decoration-color: white;
     }

    p{
        text-align: left;
    }
    .input-group-append{
        float: left;
    }
</style>

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="infoformfields">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control"  />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="infoformfields">
                <label asp-for="Fname"></label>
                <input asp-for="Fname" class="form-control"  />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Lname"></label>
                <input asp-for="Lname" class="form-control"  />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Zipcode"></label>
                <input asp-for="Zipcode" class="form-control" />
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Opslaan</button>
        </form>
        <form id="email-form" method="post">
            <p></p>
            <p><b>Email</b></p>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Email" class="form-control" disabled />
                        <div class="input-group-append">
                            <span class="input-group-text text-success font-weight-bold">✓</span>
                        </div>
                    </div>
                }
                else
                {
                    <input asp-for="Email" class="form-control" disabled />
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="savebutton">Send verification email</button>
                }
            </div>
            <div class="form-group">
                <label asp-for="EmailInput.NewEmail"></label>
                <input asp-for="EmailInput.NewEmail" class="form-control" />
                <span asp-validation-for="EmailInput.NewEmail" class="text-danger"></span>
            </div>
            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail">Verander email</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}