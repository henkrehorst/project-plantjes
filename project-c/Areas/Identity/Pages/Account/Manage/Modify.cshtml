@page
@model ModifyModel
@{
    ViewData["Title"] = "Accountgegevens aanpassen";
    ViewData["ActivePage"] = ManageNavPages.Modify;
}

<script>
    function emailStatus() {
        <partial name="_StatusMessage" model="Model.StatusMessage" />
    }
</script>
<div class="bg-white">
    <div class="h-8 rounded-lg border shadow-lg bg-white sm:mx-0 h-full">
        <div class="h-30 grid grid-cols-1 md:grid-cols-2 p-5">
            <div class="md:col-span-2">
                <h4 class="text-3xl text-bold text-green-500 font-medium">@ViewData["Title"]</h4>
            </div>
            <div>
                <h6 class="mt-2 text-2xl text-bold text-black font-bold mb-3">Algemene Info</h6>
                <form enctype="multipart/form-data" id="profile-form" method="post" class="content-center">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="FirstName" class="block text-sm font-medium text-gray-700">Voornaam</label>
                        <input placeholder="Voornaam" type="text" asp-for="FirstName" class="box-border h-8 w-full sm:w-9/12 p-4 flex-grow h-8 px-2 border rounded border-grey-400">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="LastName" class="block text-sm font-medium text-gray-700">Achternaam</label>
                        <input placeholder="Achternaam" type="text" asp-for="LastName" class="box-border h-8 w-full sm:w-9/12 p-4 flex-grow h-8 px-2 border rounded border-grey-400">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Zipcode" class="block text-sm font-medium text-gray-700">Postcode</label>
                        <input placeholder="Postcode" type="text" asp-for="Zipcode" class="box-border h-8 w-full sm:w-9/12 p-4 flex-grow h-8 px-2 border rounded border-grey-400">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                    
                    <h4 class="block text-sm font-medium text-gray-700">Avatar</h4>
                    <div class="mb-4">
                        <label class="w-full sm:w-9/12 flex flex-col items-center px-4 py-6 bg-white text-blue rounded-lg shadow-lg tracking-wide uppercase border border-blue cursor-pointer hover:bg-blue-500 hover:text-white">
                            <svg class="w-8 h-8" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                                <path d="M16.88 9.1A4 4 0 0 1 16 17H5a5 5 0 0 1-1-9.9V7a3 3 0 0 1 4.52-2.59A4.98 4.98 0 0 1 17 8c0 .38-.04.74-.12 1.1zM11 11h3l-4-4-4 4h3v3h2v-3z"/>
                            </svg>
                            <span class="mt-2 text-base leading-normal">Upload een Avatar</span>
                            <span id="file-name"></span>
                            <input type='file' id="FileUpload_FormFile" class="hidden" name="ImageUpload" accept="image/*"/>
                            <!-- Script voor filename change -->
                            <script>
                                                let inputFile = document.getElementById('FileUpload_FormFile');
                                                let fileNameField = document.getElementById('file-name');
                                                inputFile.addEventListener('change', function (event) {
                                                    let uploadedFileName = event.target.files[0].name;
                                                    fileNameField.textContent = uploadedFileName;
                                                })
                                            </script>
                            <label class="text-xs text-gray-500">
                                PNG of JPG tot 10MB
                            </label>

                        </label>
                    </div>
                    <button id="update-profile-button" type="submit" class="w-full sm:w-9/12 bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">Opslaan</button>
                </form>
            </div>
            <div>
                <h6 class="mt-2 text-2xl mb-3 text-bold text-black font-bold">Email</h6>
                <form id="email-form" method="post" class="">
                    <label class="block text-sm font-medium text-gray-700" asp-for="Email"></label>
                    @if (Model.IsEmailConfirmed)
                    {
                        <div class="input-group mb-3">
                            <input asp-for="Email" class="box-border h-8 w-full sm:w-9/12 p-4 flex-grow h-8 px-2 border rounded border-grey-400 form-control" disabled/>
                            <div class="input-group-append">
                                <span class="input-group-text text-success font-weight-bold">✓</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <input asp-for="Email" class="box-border h-8 w-full sm:w-9/12 p-4 flex-grow h-8 px-2 mb-3 border rounded border-grey-400 form-control" disabled/>
                        <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="bg-transparent hover:bg-blue-500 block text-blue-700 font-semibold hover:text-white py-2 px-4 border w-full sm:w-9/12 border-blue-500 hover:border-transparent rounded">Verstuur email verificatie</button>
                    }

                    <label class="mt-3 block text-sm font-medium text-gray-700" asp-for="EmailInput.NewEmail"></label>
                    <input asp-for="EmailInput.NewEmail" class="box-border h-8 w-full mb-3 sm:w-9/12 p-4 flex-grow h-8 px-2 border rounded border-grey-400 form-control"/>
                    <span asp-validation-for="EmailInput.NewEmail" class="text-danger"></span>

                    <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded block w-full sm:w-9/12">Verander email</button>
                    <partial name="_StatusMessage" model="Model.StatusMessage" />
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}