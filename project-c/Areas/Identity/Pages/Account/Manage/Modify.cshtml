@page
@model ModifyModel
@{
    ViewData["Title"] = "Accountgegevens Veranderen";
    ViewData["ActivePage"] = ManageNavPages.Modify;
}

<style>
    h4{
        padding-top: 15px;
    }
    input {
        background-color: #4CAF50;
        border: 1px;
        border-radius: 2px;
        border-color: #000000;
    }

    .separator{
        text-align: left;
    }

    button {
        padding: 10px 10px 10px 10px;
        text-align: center;
        transition-duration:0.2s;
        background-color: white;
        border: 2px;
        border-color: #000000;
        border-style: solid;
        border-radius: 4px;
    }

    button:hover {
        background-color: #4CAF50;
        text-decoration-color: white;
     }

    .input-group-append{
        float: left;
    }
    form{
        padding-bottom:80px;
    }
</style>

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <h6 class="separator">Algemeen</h6>
            @if (!Model.IsEmailConfirmed)
            {
                <br />
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control"  />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control"  />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control"  />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Zipcode"></label>
                <input asp-for="Zipcode" class="form-control" />
            </div>
            <br />
            <button id="update-profile-button" type="submit" class="btn btn-primary">Opslaan</button>
        </form>
        <form id="email-form" method="post">
            <h6 class="separator">Email</h6>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Email" class="form-control" disabled />
                        <div class="input-group-append">
                            <span class="input-group-text text-success font-weight-bold">✓</span>
                        </div>
                    </div>
                }
                else
                {
                    <input asp-for="Email" class="form-control" disabled />
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="savebutton">Send verification email</button>
                }
            </div>
            <div class="form-group">
                <label asp-for="EmailInput.NewEmail"></label>
                <input asp-for="EmailInput.NewEmail" class="form-control" />
                <span asp-validation-for="EmailInput.NewEmail" class="text-danger"></span>
            </div>
            <br />
            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail">Verander email</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}