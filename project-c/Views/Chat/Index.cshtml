@model Message
@model IQueryable<Chat>
@using project_c.Models.Chat
@{

    ViewData["Title"] = "Index";
}
<style>
    .mainheader {
        background-color: #33cc33;
        padding: 20px 20px 20px 20px;
        text-align: center;
        text-decoration-color: #000000;
    }
    .chatList{
        background-color: white;
        border-color: black;
        border-width: thin;
        padding-left: 5px;
        padding-right: 5px;
        width: 200%;
        border-radius: 2px;
    }
</style>

<h2 class="mainheader">Chats</h2>
<div class="main">
    <div class="px-0 flex">
        <div>
            @try
            {
                if (Model == null)
                {
                    <div class="chatList">U heeft nog geen chats gestart.</div>
                }
                else
                {
                    foreach (Chat chat in Model)
                    {
                        <div class="chatList">
                            <button>chat.ChatData.Users(FirstName)</button>
                        </div>
                    }
                }
            }
            catch (NullReferenceException)
            {

            }
        </div>
        <div class="form-group flex flex-col mt-4">
            <label asp-for="MessageContent"></label>
            <input asp-for="MessageContent" class="box-border h-8 w-102 p-4 flex-grow h-8 px-2 border rounded border-grey-400 form-control" />
            <span asp-validation-for="MessageContent" class="text-danger"></span>
        </div>
        
        <div class="flex flex-col mt-8 form-group">
            <button type="submit" class="btn btn-primary bg-green-500 hover:bg-green-700 text-white text-sm font-semibold py-2 px-4 rounded" asp-page="">Verzenden</button>
        </div>
    </div>
</div>

