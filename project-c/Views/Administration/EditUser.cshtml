@model project_c.ViewModels.EditUserViewModel

@{
    ViewBag.Title = "Edit User";
    Layout = "_Layout";
}

<section class="bg-gray-100 p-4 border-t-2 bg-opacity-5 border-indigo-400 rounded-t w-auto h-auto">
    <div class="header">
        <h1 class="text-gray-600 text-2xl justify-center text-center mr-40">Gebruiker bewerken</h1>
        <div class="max-w-sm mx-auto md:w-full justify-center">
            <div class="inline-flex items-center space-x-4">
                <form method="post" class="mt-3 space-y-4 md:space-y-0 w-full p-4 items-center justify-center mr-32">
                    <div class="form-group row">
                        <label asp-for="Id" class="col-sm-2 col-form-label font-semibold"></label>
                        <div class="col-sm-10">
                            <input asp-for="Id" disabled class="form-control ">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="FirstName" class="col-sm-2 col-form-label font-semibold"></label>
                        <div class="col-sm-10">
                            <input asp-for="FirstName" class="form-control shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="LastName" class="col-sm-2 col-form-label font-semibold"></label>
                        <div class="col-sm-10">
                            <input asp-for="LastName" class="form-control shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Zipcode" class="col-sm-2 col-form-label font-semibold"></label>
                        <div class="col-sm-10">
                            <input asp-for="Zipcode" class="form-control shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-2 col-form-label font-semibold"></label>
                        <div class="col-sm-10">
                            <input asp-for="Email" class="form-control shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="UserName" class="col-sm-2 col-form-label font-semibold"></label>
                        <div class="col-sm-10">
                            <input asp-for="UserName" class="form-control shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary inline-flex bg-green-500 text-white p-2 px-4 mt-2 hover:bg-green-700 rounded">Update</button>
                            <a asp-action="ListUsers" class="btn btn-primary inline-flex btn-danger bg-red-500 text-white p-2 px-4 mt-2 hover:bg-red-700 rounded">Cancel</a>
                        </div>
                    </div>
                </form>
                <div class="card mb-64 space-y-2 text-md">
                    <div class="card-header ">
                        <h3 class="whitespace-no-wrap font-semibold">User Roles</h3>
                    </div>
                    <div class="card-body ">
                        @if (Model.Roles.Any())
                        {
                            foreach (var role in Model.Roles)
                            {
                                <h5 class="card-title inline-flex bg-blue-500 text-white rounded-full h-6 px-3 justify-center items-center">@role</h5>
                            }
                        }
                        else
                        {
                            <h5 class="card-title whitespace-no-wrap inline-flex bg-blue-500 text-white rounded-full h-6 px-3 justify-center items-center">None at the moment</h5>
                        }
                    </div>
                    <div class="card-footer">
                        <a href="#" style="width:auto" class="btn btn-primary whitespace-no-wrap inline-flex bg-green-500 text-white p-2 px-4 mt-2 hover:bg-green-700 rounded">
                            Wijzig Roles
                        </a>
                    </div>
                </div>

                <div class="card mb-64 space-y-2 text-md">
                    <div class="card-header">
                        <h3 class="whitespace-no-wrap font-semibold">User Claims</h3>
                    </div>
                    <div class="card-body">
                        @if (Model.Claims.Any())
                        {
                            foreach (var claim in Model.Claims)
                            {
                                <h5 class="card-title whitespace-no-wrap inline-flex bg-blue-500 text-white rounded-full h-6 px-3 justify-center items-center">@claim</h5>
                            }
                        }
                        else
                        {
                            <h5 class="card-title whitespace-no-wrap inline-flex bg-blue-500 text-white rounded-full h-6 px-3 justify-center items-center">None at the moment</h5>
                        }
                    </div>
                    <div class="card-footer">
                        <a href="#" style="width:auto" class="btn btn-primary whitespace-no-wrap inline-flex bg-green-500 text-white p-2 px-4 mt-2 hover:bg-green-700 rounded">
                            Wijzig Claims
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section>

