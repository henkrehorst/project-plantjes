@model IEnumerable<Report>
@using project_c.Models.Plants
@{
    ViewData["Title"] = "ListReports";
}

    <h1 class="text-4xl text-center m-2">Huidige Meldingen</h1>
    @foreach(Report report in Model)
    {
        <div class="card mb-3 pb-8 pt-4">
            <div class="card-header border-gray-400 bg-gray-200 border-2 w-1/2">
                Melding van @report.User

            </div>
            <div class="card-body bg-gray-100 w-1/2">
                <div class="">
                    @using (Html.BeginForm("DeleteReport", "Administration", new { id = report.ReportId }, FormMethod.Post))
                    {
                        <button type="submit" class="mt-1 mr-1 btn btn-primary bg-blue-500 hover:bg-blue-700 text-white text-sm font-semibold float-right py-2 px-4 rounded">Verwerp het Rapport</button>
                    }
                    Betreffend artikel - <a class="text-blue-700" href="/plants/details/@report.Plant.PlantId"> @report.Plant.Name </a>
                </div>
                <div class="text-black-50 w-1/2">
                    " @report.Body "
                    
                </div>
            </div>
        </div>
    }

