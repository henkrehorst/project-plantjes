@model IEnumerable<Report>
@using project_c.Models.Plants
@{
    ViewData["Title"] = "ListReports";
}
@foreach (Report report in Model)
{
    <div class="card-5 container my-12 mx-auto inline">
        <div class="flex flex-wrap -mx-1 lg:-mx-4">

            <!-- Column -->
            <div class="my-1 px-1 w-full md:w-1/2 lg:my-4 lg:px-4 lg:w-1/3">

                <!-- Article -->
                <article class="overflow-hidden rounded-lg shadow-lg">


                    <header class="flex items-center justify-between leading-tight p-2 md:p-4">
                        <h1 class="text-lg">
                            Betreffend artikel - <a class="no-underline hover:underline text-blue-700" href="/plants/details/@report.Plant.PlantId">
                                @report.Plant.Name
                            </a>
                        </h1>
                    </header>
                    <p class="text-grey-darker text-sm ml-4">
                        " @report.Body "
                    </p>

                    <footer class="flex items-center justify-between leading-none p-2 md:p-4">
                        <a class="flex items-center no-underline text-black">
                            <div class="no-underline text-grey-darker hover:text-red-dark ">
                                <span class="hidden">Gebruiker</span>
                                <i class="fas fa-user-alt" style="color:cornflowerblue"></i>
                            </div>
                            <p class="ml-2 text-sm">
                                Melding van @report.User
                            </p>
                        </a>
                        @using (Html.BeginForm("DeleteReport", "Administration", new { id = report.ReportId }, FormMethod.Post))
                        {
                            <button type="submit" class="mt-1 mr-1 btn btn-primary bg-blue-500 hover:bg-blue-700 text-white text-sm font-semibold float-right py-2 px-4 rounded">Verwerp het Rapport</button>
                        }
                    </footer>

                </article>
                <!-- END Article -->

            </div>
        </div>
    </div>
}
    <!-- END Column -->

