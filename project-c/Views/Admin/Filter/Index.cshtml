@using project_c.Models.Plants
@{
    ViewBag.Title = "Filter overzicht";
    Layout = "_Layout";
}

<h2 class="text-xl font-semibold">Beheer uw filters</h2>
<table class="table-auto mb-5">
    <thead>
    <tr>
        <th class="px-4 py-2">Naam</th>
        <th class="px-4 py-2">Beschrijving</th>
    </tr>
    </thead>
    <tbody>
    @foreach (Filter filter in (List<Filter>) ViewData["filters"])
    {
        <tr>
            <td class="border px-4 py-2">@filter.Name</td>
            <td class="border px-4 py-2">@filter.Description</td>
        </tr>
    }
    </tbody>
</table>
<a asp-controller="Filter" asp-action="Create" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
    Maak een nieuwe filter
</a>