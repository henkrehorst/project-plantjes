@model IQueryable<Plant>;
@using project_c.Models.Plants;
@using project_c.Controllers;
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<h2></h2>
<div class="flex mb-4 space-x-3">
    @{
        foreach (var plant in Model)
        {
            <div class="w-1/3 h-12">
                <div class="max-w-sm rounded overflow-hidden shadow-lg">
                    <img class="w-full mx-auto" src="@plant.ImgUrl" alt="Plant foto" style="width: 300px;height: 300px;object-fit: cover;">
                    <div class="px-6 py-4">
                        <h6>Naam:</h6><div class="font-bold text-xl mb-2">@plant.Name</div>
                        <h6>Lengte:</h6><div class="font-bold text-xl mb-2">@plant.Length&nbsp;mm</div>
                        <h6>Beschrijving:</h6><p class="text-gray-700 text-base">
                            @plant.Description
                    </p>
                    <h6>Geupload door:</h6><div class="font-bold text-l mb-2">@plant.User.UserName</div>
                    @{
                        if (User.IsInRole("Admin"))
                        {
                            <h6>Huidige karma:</h6><div class="font-bold text-l mb-2">@plant.User.UserData.Karma</div>
                            <br />
                            <div class="flex space-x-3">
                                <a class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded"
                                   href="/plants/edit/@plant.PlantId">Edit</a>
                                @using (Html.BeginForm("Delete", "Plants", new { id = plant.PlantId }, FormMethod.Post))
                                {
                                    <button class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded"
                                            type="submit">
                                        Verwijderen
                                    </button>
                                }
                                @if (!plant.HasBeenApproved)
                                {
                                    using (Html.BeginForm("Approve", "Plants", new { id = plant.PlantId }, FormMethod.Post))
                                    {
                                        <button class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded"
                                                type="submit">
                                            Approve
                                        </button>
                                    }
                                }
                            </div>
                        }
                    }
                    </div>
                </div>
            </div>
        }
    }
</div>