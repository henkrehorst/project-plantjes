@using project_c.Models.Plants
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container w-full mx-auto mt-3 bg-green-700 shadow p-8 text-gray-700">
    <div class="px-0 flex">
        <div>
            <h2 class="md:text-4xl text-xl font-medium text-white leading-6 text-gray-200">Plant toevoegen</h2>
        </div>
    </div>
</div>

<div class="w-full mx-auto mb-4 bg-white shadow p-8 pt-0 text-gray-700">
    <form asp-action="Create" enctype="multipart/form-data" method="POST" class="bg-white">
        <div class="grid grid-cols-1 md:grid-cols-2">
            <div class="mb-2 mt-2 p-5">
                <h1 class="text-2xl font-bold mb-3">Informatie over de plant</h1>
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="Naam">
                        Naam
                    </label>
                    <input class="shadow appearance-none border border-blue-500 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline    " id="Naam" type="text" placeholder="Naam" name="name" required>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="Lengte">
                        Lengte
                    </label>
                    <input class="shadow appearance-none border border-blue-500 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="Lengte" type="number" min="1" placeholder="Lengte in mm" name="length" required>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="Aantal">
                        Aantal
                    </label>
                    <input class="shadow appearance-none border border-blue-500 rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="Aantal" type="number" min="1" placeholder="Aantal aanbod" name="quantity" required>
                </div>
                @foreach (Filter filter in (ICollection<Filter>) ViewData["Filters"])
                {
                    <div class="mb-4">
                        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="filter-@filter.SystemId">
                            @filter.Name
                        </label>
                        <select class="block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                id="filter-@filter.SystemId" name="filter[@filter.SystemId]">
                            @foreach (Option option in filter.Options)
                            {
                                <option value="@option.OptionId">@option.DisplayName</option>
                            }
                        </select>
                    </div>
                }
                <div class="mb-6">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="Beschrijving">
                        Beschrijving
                    </label>
                    <textarea class="form-textarea shadow appearance-none border border-blue-500 rounded h-32 w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="Beschrijving" type="text" placeholder="Beschrijving" name="description" required></textarea>
                    <p class="mt-1 text-sm text-gray-500">Een korte beschrijving over jouw stekje!</p>
                </div>
            </div>
            <div class="mb-2 mt-2 p-5">
                <h1 class="text-2xl font-bold mb-3">Foto's van de plant</h1>
                <div class="custom-file-container" id="plantPictureUploadBox" data-upload-id="plantPictureUpload">
                    <label class="block text-gray-700 text-sm font-bold mb-1">
                        Upload hier uw files
                        <a
                            href="javascript:void(0)"
                            class="custom-file-container__image-clear"
                            title="Clear Image">
                            &times;
                        </a
                        >
                    </label>
                    <label class="custom-file-container__custom-file">
                        <input
                            type="file"
                            class="custom-file-container__custom-file__custom-file-input"
                            accept="image/jpeg"
                            multiple="multiple"
                            aria-label="Choose File"/>
                        <input type="hidden" name="MAX_FILE_SIZE" value="10485760"/>
                        <span
                            class="custom-file-container__custom-file__custom-file-control">
                        </span>
                    </label>
                    <div class="custom-file-container__image-preview"></div>
                </div>
            </div>
        </div>
        <div class="flex items-center justify-between">
            <button class="bg-blue-500 ml-5 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                Toevoegen
            </button>
        </div>


    </form>
</div>