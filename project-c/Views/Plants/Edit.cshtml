@model IQueryable<Plant>;
@using project_c.Models.Plants;
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<h2>Edit Plant</h2>

<div class="w-full max-w-xs">
    @foreach (var plant in Model)
    {
        <form asp-action="Edit" method="POST" enctype="multipart/form-data" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="Naam">
                    Naam
                </label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                       id="Naam" type="text" placeholder="Naam" name="name" value="@plant.Name" required>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="Lengte">
                    Lengte
                </label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                       id="Lengte" type="number" placeholder="Lengte in mm" name="length" min ="1" value="@plant.Length" required>
            </div>
            <div class="mb-4">
                        <label for="FileUpload_FormFile">Afbeelding</label>
                        <input id="FileUpload_FormFile" type="file" name="ImageUpload"/>
                    </div>
            <div class="mb-6">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="Beschrijving" >
                    Beschrijving
                </label>
                <textarea class="shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="Beschrijving" type="text" placeholder="Beschrijving" name="description"  required>@plant.Description
                </textarea>
            </div>
            <div class="flex items-center justify-between">
                <button class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" type="submit">
                    Save
                </button>
            </div>
        </form>
    }
</div>